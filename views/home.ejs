<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>
        <%= startingContent %>
    </p>

    <div>
        <form method="get" action="/compose">
            <button class="compose-blog" type="submit">Create Post</button>
        </form>
    </div>

    <% posts.forEach(function(post){ %>
        <div class="blog-container-two">
            <h1>
                <%= post.title %>
            </h1>
            <p>
                <%= post.content.substring(0,100) +" ..." %><a href="/posts/<%= post.title %>">Read More</a>
            </p>
        </div>
        <% }); %>

            <%- include("partials/footer"); -%>